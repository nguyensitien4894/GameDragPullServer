
@{
    //success messages
    var successMessages = new List<string>();
    if (TempData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Success)] as IList<string>);
    }
    if (ViewData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Success)] as IList<string>);
    }


    //error messages
    var errorMessages = new List<string>();
    if (TempData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Error)] as IList<string>);
    }
    if (ViewData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("webgame.notifications.{0}", MsWebGame.CSKH.Utils.AppConstants.NotifyType.Error)] as IList<string>);
    }
}
@foreach (var message in successMessages)
{
    <div class="alert alert-success alert-dismissible  in">
        @message
    </div>
}
@foreach (var message in errorMessages)
{
    <div class="alert alert-danger alert-dismissible  in">
        @message
    </div>
}