@using MsWebGame.CSKH.Utils
@using Telerik.Web.Mvc.UI
@using MsWebGame.CSKH.Models.LuckyDice
@model RaceTopModel

@{
    ViewBag.Title = "Tài-Xỉu Giải đua top";
}

<h2>Cấu hình giải đua top</h2>


@using (Html.BeginForm("SaveRaceTop", "LuckyDice", FormMethod.Post))
{
    <div class="section-header">
        <div class="title">
            
        </div>
    </div>

    <div class="t-widget t-tabstrip t-header">
        <div class="t-content t-state-active" style="display: block;">
            <table class="adminContent customer-info-tab">
                @Html.HiddenFor(model => model.RaceTopID)
                <tr>
                    <td class="adminTitle">
                        @Html.LabelFor(model => model.Quantity):
                    </td>
                    <td class="adminData">
                        @Html.EditorFor(model => model.Quantity, new { @class = "text-box single-line" })
                        @Html.ValidationMessageFor(model => model.Quantity)
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        @Html.LabelFor(model => model.PrizeValue):
                    </td>
                    <td class="adminData">
                        @Html.EditorFor(model => model.PrizeValue, new { @class = "text-box single-line" })
                        @Html.ValidationMessageFor(model => model.PrizeValue)
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        @Html.LabelFor(model => model.Description):
                    </td>
                    <td class="adminData">
                        @Html.EditorFor(model => model.Description, new { @class = "text-box single-line" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </td>
                </tr>
                
                <tr>
                    <td class="adminTitle">
                       
                    </td>
                    <td class="adminData">
                        <div class="options">
                            <input type="button" class="t-button" value="Quay lại" onclick="window.location.href='@Url.Action("RaceTop", "LuckyDice")'" />
                            <input type="submit" name="save" class="t-button" value="@AppConstants.CONFIG.SAVE" />
                        </div>
                    </td>
                </tr>

                
            </table>
        </div>

    </div>


}