@using MsWebGame.CSKH.Utils
@Html.ValidationSummary(true)
@model  MsWebGame.CSKH.Database.DTO.Artifacts
@{
    ViewBag.Title = "Quản lý sản phẩm đổi điểm";
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Content/images/ico-promotions.png")" alt="" />
            @AppConstants.CONFIG.EDIT
        </div>
        <div class="options">
            <a href="@Url.Action("Artifacts")" class="t-button">Quay lại</a>
        </div>
    </div>
    if (Model != null && Model.ArtifactID > 0)
    {
        @Html.HiddenFor(m => m.ArtifactID)
        @Html.HiddenFor(m => m.CreateUser)
        @Html.HiddenFor(m => m.CreateDate)
        <div class="t-widget t-tabstrip t-header">
            <div class="t-content t-state-active" style="display: block;">
                <table class="adminContent customer-info-tab">
                    <tr>
                        <td class="adminTitle">
                            @Html.LabelFor(model => model.ArtifactCode):
                        </td>
                        <td class="adminData">
                            <input type="text" name="ArtifactCode" value="@Model.ArtifactCode" class="text-box single-line" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            <label>Tên hiện vật <span style="color:red;">*</span></label>
                        </td>
                        <td class="adminData">
                            <input class="text-box single-line" value="@Model.ArtifactName" id="artifactsName" name="ArtifactName" type="text">
                            <span class="field-validation-valid" data-valmsg-for="artifactsName"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            <label>Giá <span style="color:red;">*</span></label>
                        </td>
                        <td class="adminData">
                            <input class="text-box single-line" value="@Model.PriceFormat" id="price" name="PriceStr" type="text" onchange="GlobalHeader.changeNumber(this);" 
                               onkeypress="return GlobalHeader.isNumber(event);">
                            <span class="field-validation-valid" data-valmsg-for="price"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            <label>Trạng thái <span style="color:red;">*</span></label>
                        </td>
                        <td class="adminData">
                            <select id="status" name="Status" class="text-box single-line">
                                <option value="true" @(Model.Status ? "selected" : string.Empty)>Hiệu lực</option>
                                <option value="false" @(Model.Status ? string.Empty : "selected")>Hết hiệu lực</option>
                            </select>
                            <span class="field-validation-valid" data-valmsg-for="status"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle">
                            <label>Miêu tả <span style="color:red;">*</span></label>
                        </td>
                        <td class="adminData">
                            <input class="text-box single-line" value="@Model.Description" id="description" name="Description" type="text">
                            <span class="field-validation-valid" data-valmsg-for="description"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="adminTitle"></td>
                        <td class="adminData">
                            <input type="submit" onclick="GlobalHeader.validationArtifacts(1);" name="save" class="t-button" value="@AppConstants.CONFIG.SAVE" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
}