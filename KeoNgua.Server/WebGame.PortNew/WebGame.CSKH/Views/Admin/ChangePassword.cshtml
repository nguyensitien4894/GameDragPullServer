@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MsWebGame.CSKH.Utils

@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Content/images/ico-configuration.png")" alt="" />
            Thay đổi mật khẩu
        </div>
    </div>
    <div class="t-widget t-tabstrip t-header">
        <div class="t-content t-state-active" style="display: block;">
            <table class="adminContent customer-info-tab">
                <tr>
                    <td class="adminTitle"></td>
                    <td class="adminData">
                        <span id="txttransferMsg" class="@(ViewBag.Message.IndexOf("thành công") != -1 ? "txttransferMsgSuccess" : "txttransferMsg")">@ViewBag.Message</span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <img src="~/Content/images/ico-help.gif">
                        <label>Mật khẩu cũ</label>
                    </td>
                    <td class="adminData">
                        <input type="password" id="password-old" name="passwordOld" class="text-box single-line" required />
                        <span class="field-validation-valid" data-valmsg-for="passwordOld"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <img src="~/Content/images/ico-help.gif">
                        <label>Mật khẩu mới</label>
                    </td>
                    <td class="adminData">
                        <input type="password" id="password-new" name="passwordNew" class="text-box single-line" required />
                        <span class="field-validation-valid" data-valmsg-for="passwordNew"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <img src="~/Content/images/ico-help.gif">
                        <label>Nhập lại mật khẩu mới</label>
                    </td>
                    <td class="adminData">
                        <input type="password" id="re-password-new" name="rePasswordNew" class="text-box single-line" required />
                        <span class="field-validation-valid" data-valmsg-for="rePasswordNew"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle"></td>
                    <td class="adminData">
                        <input type="submit" class="t-button" value="@AppConstants.CONFIG.CONFIRM">
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                $('#txttransferMsg').html('');
            }, 4000);
        });
    </script>
}