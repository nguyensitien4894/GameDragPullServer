@using MsWebGame.CSKH.Utils
@using Telerik.Web.Mvc.UI
@model  MsWebGame.CSKH.Database.DTO.GameCampaign
@{
    ViewBag.Title = "Cấu hình chiến dịch";
}

@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Content/images/ico-promotions.png")" alt="" />
            @AppConstants.CONFIG.ADD_NEW
        </div>
        <div class="options">
            <a href="@Url.Action("Campaign")" class="t-button">Quay lại</a>
        </div>
    </div>
    <div class="t-widget t-tabstrip t-header">
        <div class="t-content t-state-active" style="display: block;">
            <table class="adminContent customer-info-tab">
                <tr>
                    <td class="adminTitle">
                        <img src="~/Content/images/ico-help.gif">
                        <label>Chọn cổng</label>
                    </td>
                    <td class="adminData">
                        @Html.DropDownListFor(m=>m.ServiceID, new SelectList(ViewBag.ServiceBox, "Value", "Text"), new { @class = "text-box single-line" })
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Mã chiến dịch <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        <input class="text-box single-line" id="campaignCode" name="campaignCode" type="text">
                        <span class="field-validation-valid" data-valmsg-for="campaignCode"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Tên chiến dịch <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        <input class="text-box single-line" id="campaignName" name="campaignName" type="text">
                        <span class="field-validation-valid" data-valmsg-for="campaignName"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Ngày hiệu lực <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        @Html.Telerik().DatePicker().Name("effectDate").Value(DateTime.Today.AddDays(1))
                        <span class="field-validation-valid" data-valmsg-for="effectDate"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Ngày hết hạn <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        @Html.Telerik().DatePicker().Name("expiredDate").Value(DateTime.Today.AddDays(2))
                        <span class="field-validation-valid" data-valmsg-for="expiredDate"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Trạng thái <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        <select id="status" name="status" class="text-box single-line">
                            <option value="true">Hiệu lực</option>
                            <option value="false">Hết hiệu lực</option>
                        </select>
                        <span class="field-validation-valid" data-valmsg-for="status"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle">
                        <label>Miêu tả <span style="color:red;">*</span></label>
                    </td>
                    <td class="adminData">
                        <input class="text-box single-line" id="description" name="description" type="text">
                        <span class="field-validation-valid" data-valmsg-for="description"></span>
                    </td>
                </tr>
                <tr>
                    <td class="adminTitle"></td>
                    <td class="adminData">
                        <input type="submit" onclick="return GlobalHeader.validationCampaign(0);" name="save" class="t-button" value="@AppConstants.CONFIG.SAVE" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
}