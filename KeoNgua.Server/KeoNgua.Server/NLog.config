<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace">
  <!-- define various log targets -->
  <targets>
    <!-- write logs to file -->
    <target name="infoLog" xsi:type="AsyncWrapper" queueLimit="5000">
      <target xsi:type="File" fileName="${basedir}/_LOG/${shortdate}_KeoNgua.log"
            layout="${longdate} ${uppercase:${level}} ${message}" archiveAboveSize="102400000" maxArchiveFiles="99" archiveFileName="${basedir}/archives/${shortdate}_KeoNgua_{##}.log" archiveNumbering="Sequence" encoding="utf-8"/>
    </target>
    <target name="authenLog" xsi:type="AsyncWrapper" queueLimit="5000">
      <target xsi:type="File" fileName="${basedir}/_LOG/${shortdate}_KeoNguaAuthen.log"
              layout="${longdate} ${uppercase:${level}} ${message}" archiveAboveSize="102400000" archiveFileName="${basedir}/archives/${shortdate}_KeoNguaAuthen_{##}.log" encoding="utf-8"/>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="infoLog" />
    <logger name="Authen" minlevel="Trace" writeTo="authenLog" />
  </rules>
</nlog>

